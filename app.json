{
    "id": "com.soma.connect",
    "version": "1.0.1",
    "compatibility": ">=3.0.0",
    "sdk": 2,
    "brandColor": "#FF7D4B",
    "name":
    {
        "en": "Soma Connect"
    },
    "description":
    {
        "en": "Control your Soma blinds and shades"
    },
    "category": [
        "appliances"
    ],
    "tags":
    {
        "en": [
            "Soma",
            "Blinds"
        ]
    },
    "permissions": [],
    "bugs":
    {
        "url": "https://github.com/AdyRock/com.soma.connect/issues"
    },
    "source": "https://github.com/AdyRock/com.soma.connect",
    "homeyCommunityTopicId": 22000,
    "images":
    {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author":
    {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "flow":
    {
        "triggers": [
        {
            "id": "deviceOnlineState",
            "title":
            {
                "en": "Device Online state changed"
            },
            "tokens": [
                {
                    "name": "state",
                    "type": "boolean",
                    "title":
                    {
                        "en": "Online"
                    },
                    "example": true
                } ],
                "args": [
            {
                "name": "my_device",
                "type": "device",
                "filter": "driver_id=somashade"
            } ]
        }]
    },
    "drivers": [
    {
        "id": "somashade",
        "name":
        {
            "en": "Soma Shade"
        },
        "class": "blinds",
        "capabilities": [
            "measure_battery",
            "windowcoverings_set"
        ],
        "energy":
        {
            "batteries": [
                "INTERNAL"
            ]
        },
        "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation":
            {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        } ],
        "images":
        {
            "large": "/drivers/somashade/assets/images/large.png",
            "small": "/drivers/somashade/assets/images/small.png"
        }
    } ]
}