{
    "id": "com.soma.connect",
    "version": "0.0.5",
    "compatibility": ">=3.0.0",
    "sdk": 2,
    "name":
    {
        "en": "Soma Connect"
    },
    "description":
    {
        "en": "Adds support for Soma devices via the Soma Connect hub"
    },
    "category": [
        "appliances"
    ],
    "tags":
    {
        "en": [
            "Soma",
            "Blinds"
        ]
    },
    "permissions": [],
    "bugs":
    {
        "url": "https://github.com/AdyRock/com.soma.connect/issues"
    },
    "source": "https://github.com/AdyRock/com.soma.connect",
    "images":
    {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author":
    {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "drivers": [
    {
        "id": "somashade",
        "name":
        {
            "en": "Soma Shade"
        },
        "class": "blinds",
        "capabilities": [
            "measure_battery",
            "alarm_battery",
            "windowcoverings_closed",
            "windowcoverings_set"
        ],
        "energy":
        {
            "batteries": [
                "INTERNAL"
            ]
        },
        "pair": [
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation":
            {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        } ],
        "settings": [{
            "type": "group",
            "label": {
                "en": "Device info"
            },
            "children": [
                {
                    "id": "openPosition",
                    "type": "number",
                    "label": {
                        "en": "Open Position"
                    },
                    "value": 50,
                    "min": 0,
                    "max": 100
                },
                {
                    "id": "closedPosition",
                    "type": "number",
                    "label": {
                        "en": "Close Position"
                    },
                    "value": 100,
                    "min": 0,
                    "max": 100
                }
            ]
        }],
        "images":
        {
            "large": "/drivers/somashade/assets/images/large.png",
            "small": "/drivers/somashade/assets/images/small.png"
        }
    } ]
}